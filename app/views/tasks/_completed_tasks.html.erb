<% @tasks.each do |task| %>
<div class="entry row">
	<div class="span9">
		<div class="row">
			<div class="span8">
				<h3><span class="label label-info"><%= task.priority %></span> <%= task.name %></h3>
				<b>Due date:</b> <%= l task.due_date %><br />
				<b>Timer started:</b> <%= l task.created_at %><br />
				<b>Completed on:</b> <%= l task.updated_at %><br />
				Completed <%= time_ago_in_words(task.updated_at) %> ago.<br />
				<br />				
			</div>
		</div>
	</div>
</div>
<% end %>
<%= link_to "New Task", new_task_path %>