<% @tasks.each do |task| %>
<div class="entry row">
	<div class="span9">
		<div class="row">
			<div class="span8">
				<h3><%= task.name %></h3>
				<b>Due date:</b> <%= l task.due_date %><br />
				<b>Timer started:</b> <%= l task.created_at %><br />
				<b>Priority:</b> <%= task.priority %><br />
				<% if task.percent >= 100 %>
		      You are <%= distance_of_time_in_words(Time.now, task.due_date) %> late!
		    <% else %>
		      You have <%= distance_of_time_in_words(Time.now, task.due_date) %> to go.
		    <% end %>
				<br />
				
			</div>
			<div id="tools">
				<%= link_to edit_task_path(task), class: "btn btn-success" do %>
					<i class="icon-refresh icon-white"></i> Renew
				<% end %>
	    	<%= link_to edit_task_path(task), class: "btn btn-primary" do %>
					<i class="icon-edit icon-white"></i> Update
				<% end %>
	    	<%= link_to task, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" do %>
					<i class="icon-trash icon-white"></i> Delete
				<% end %>
			</div>
		</div>
		<div class="span8">
			<div class="progress progress-<%= task.bar_color %> progress-striped active">
				<div class="bar" style="width: <%= task.percent %>%;"></div>
			</div>
		</div>
	</div>
</div>
<% end %>
<%= link_to "New Task", new_task_path %>