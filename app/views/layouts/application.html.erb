<!DOCTYPE html>
<html>
<head>
  <title>Enpronto</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<%= render 'layouts/messages' %>
	
	<% if user_signed_in? %>
		<div class="container">
			<%= render 'layouts/user_interface' %>
		</div>
	<% else %>
		<div class="container">
			<%= yield %>
		</div>
	<% end %>

	<%= render 'layouts/footer' %>

</body>
</html>
